            name="username"
            placeholder="Enter Registered Email"
            required
            autocomplete="on"
         />
         <button type="submit">Get OTP</button>
      </form>

      <form action="/" method="get">
         <button type="submit">Cancel</button>
      </form>
      <%- include('footer') -%>
   </body>
